@using Resources
@{
    ViewBag.Title = "Import Products";
}


<h2>@Html.Raw(Test.importProducts)</h2>
@using (Html.BeginForm("ImportProducts", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName(Test.txt)
        </dt>

        <dd>
            <input type="file" class="input-box" id="fileToImport" name="fileToImport">
        </dd>

        <dt>
            @Html.DisplayName(Test.csv)
        </dt>

        <dd>
            <input type="file" class="input-box" id="csvToImport" name="csvToImport">
        </dd>


    </dl>
    <input type="submit" value=@Html.Raw(ProductsTerms.Upload)>
}

<h2>@ViewBag.Result</h2>
<table>
    <thead>
        <tr>
            <th>
                @Html.Raw(ProductsTerms.Name)
            </th>

            <th>
                @Html.Raw(ProductsTerms.Price)
            </th>

            <th>
                @Html.Raw(ProductsTerms.Category)
            </th>



        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Products != null)
        {
            var products = ViewBag.Products;
            if (products != null)
            {
                foreach (var product in products)
                {
                    <tr>
                        <td>@product.Name</td>

                        <td>@product.Price</td>

                        <td>@product.Category</td>

                    </tr>
                }
            }
        }
    </tbody>

</table>